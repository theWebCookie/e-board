generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  hashed_password String @unique

  boards UsersOnBoards[]
  messages Message[]
}

model Board {
  id String @id
  name String
  content Bytes @db.ByteA
  authorId Int
  createdAt DateTime
  updatedAt DateTime

  users UsersOnBoards[]
  boardInvite BoardInvite[]
  messages Message[]
}

model UsersOnBoards {
  userId Int
  boardId String
  User User @relation(fields: [userId], references: [id])
  Board Board @relation(fields: [boardId], references: [id])

  @@id([userId, boardId])
}

model BoardInvite {
  id Int @id @default(autoincrement())
  boardId String
  code String
  inviteActive Boolean

  board Board @relation(fields: [boardId], references: [id])
}

model Message {
  id Int @id @default(autoincrement())
  message String
  userId Int
  boardId   String
  sentAt DateTime

  user User @relation(fields: [userId], references: [id])
  board Board @relation(fields: [boardId], references: [id])
}