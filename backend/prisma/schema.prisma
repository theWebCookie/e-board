model Message {
  id Int @id @default(autoincrement())
  message String
  userId Int

  Chat Chat[]
}

model Chat {
  id Int @id @default(autoincrement())
  content String
  boardId Int

  board Board @relation(fields: [boardId], references: [id])
  messages Message[]
}